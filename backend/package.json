{
  "name": "typescript-node",
  "version": "1.0.0",
  "description": "A minimal Node.js project using TypeScript",
  "main": "index.js",
  "scripts": {
    "start": "npm run tslint && npm run serve",
    "serve": "nodemon --watch \"src/**/*.ts\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node\" --inspect src/server.ts",
    "build": "npm run tslint && npm run build-ts",
    "build-ts": "tsc",
    "seed": "ts-node ./src/tasks/seedDatabase.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --forceExit"
  },
  "author": "no one",
  "license": "MIT",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/socket.io": "^1.4.30",
    "apollo-server-express": "^1.1.2",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.18.0",
    "compression": "^1.7.0",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.15.4",
    "express-validator": "^4.2.0",
    "graphql": "^0.11.3",
    "graphql-subscriptions": "^0.5.1",
    "jsonwebtoken": "^8.0.1",
    "mongoose": "^4.11.11",
    "morgan": "^1.8.2",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "socket.io": "^2.0.3",
    "socketio-jwt": "^4.5.0",
    "subscriptions-transport-ws": "^0.9.0",
    "uuid": "^3.1.0",
    "validator": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/bluebird": "^3.5.10",
    "@types/body-parser": "^1.16.5",
    "@types/compression": "0.0.34",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^4.0.1",
    "@types/errorhandler": "0.0.31",
    "@types/express": "^4.0.37",
    "@types/express-validator": "^3.0.0",
    "@types/graphql": "^0.11.4",
    "@types/jest": "^20.0.8",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/mongoose": "^4.7.21",
    "@types/morgan": "^1.7.32",
    "@types/passport": "^0.3.4",
    "@types/passport-jwt": "^2.0.24",
    "@types/supertest": "^2.0.3",
    "@types/uuid": "^3.4.2",
    "@types/validator": "^6.3.0",
    "jest": "^21.0.2",
    "nodemon": "^1.12.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  }
}
